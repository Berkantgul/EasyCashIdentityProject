@model ConfirmMailViewModel
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <label>Kullanıcı Mail Adresi</label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.Email"/>
        <br />
        <label>Mail Adresinize gelen 6 haneli kodu giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmCode"/>
        <br />
        <button class="btn btn-outline-primary">Hesabı aktifleştir</button>
    </form>
</div>

